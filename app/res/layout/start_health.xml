<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:runnerup="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tab_health"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <org.runnerup.widget.TitleSpinner
        android:id="@+id/health_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:prompt="@string/Type"
        android:text="@string/Health_Type"
        runnerup:type="spinner_txt_id" />

    <org.runnerup.widget.TitleSpinner
        android:id="@+id/health_value_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/health_type"
        android:layout_alignParentLeft="true"
        android:prompt="@string/Type"
        android:text="@string/Health_Value"
        runnerup:type="spinner_txt_id" />

    <org.runnerup.widget.TitleSpinner
        android:id="@+id/health_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/health_value_type"
        android:prompt="@string/Type"
        android:defaultValue="today"
        android:text="@string/Date"
        runnerup:type="datepicker" />

    <org.runnerup.widget.TitleSpinner
        android:id="@+id/health_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/health_date"
        android:prompt="@string/Type"
        android:text="@string/Start_hour"
        runnerup:type="timepicker" />

    <org.runnerup.widget.TitleSpinner
        android:id="@+id/health_unit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/health_time"
        android:layout_alignParentLeft="true"
        android:prompt="@string/Type"
        android:text="@string/Health_Value"
        runnerup:type="spinner_txt_id" />

       <org.runnerup.widget.TitleSpinner
        android:id="@+id/health_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/health_unit"
        android:prompt="@string/Type"
        android:inputType="numberDecimal"
        android:text="@string/Health_Value"
        runnerup:type="numberpicker" />


    <EditText
        android:id="@+id/health_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/health_value"
        android:layout_alignParentBottom="true"
        android:ems="10"
        android:gravity="top|left"
        android:inputType="textMultiLine"
        android:singleLine="false"
        android:hint="@string/Add_workout_notes" />

</RelativeLayout>

